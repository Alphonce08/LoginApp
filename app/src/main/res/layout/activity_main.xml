<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mbtCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="109dp"
        android:text="Calc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mbtWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="64dp"
        android:hint="Web"
        android:text="Web"
        app:layout_constraintStart_toStartOf="@+id/mbtCal"
        app:layout_constraintTop_toBottomOf="@+id/mbtCal" />

    <Button
        android:id="@+id/mbtAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="88dp"
        android:hint="Alert"
        android:text="Alert"
        app:layout_constraintStart_toStartOf="@+id/mbtWeb"
        app:layout_constraintTop_toBottomOf="@+id/mbtWeb" />
</androidx.constraintlayout.widget.ConstraintLayout>